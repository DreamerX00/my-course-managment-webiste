generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(STUDENT)
  status        UserStatus @default(ACTIVE)
  bio           String?
  accounts      Account[]
  sessions      Session[]

  enrolledCourses Course[] @relation("CourseEnrollment")
  createdCourses  Course[] @relation("InstructorCourses")

  progress Progress[]
  quizAttempts QuizAttempt[]

  // Ranking System Relations
  userRank    UserRank?
  leaderboardEntries WeeklyLeaderboard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userProfile UserProfile?
  invitations Invitation[]
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  thumbnail   String?
  price       Float
  isPublished Boolean  @default(false)
  instructor  String?
  instructorId String?

  students    User[]     @relation("CourseEnrollment")
  creator     User?      @relation("InstructorCourses", fields: [instructorId], references: [id], onDelete: Cascade)
  courseDetails CourseDetails?

  chapters Chapter[]
  progress Progress[]

  // Ranking System Relations
  coursePoints CoursePoints?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseDetails {
  id          String   @id @default(cuid())
  courseId    String   @unique
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // Content details fields
  title       String
  category    String
  tags        String[] // Array of tags
  instructor  Json     // Instructor object with name, avatar, rating, students
  rating      Float
  enrolledCount Int
  duration    String
  price       Float
  originalPrice Float
  isFree      Boolean
  description String   @db.Text
  features    Json     // Array of feature objects
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Performance indexes
  @@index([category])
  @@index([isFree])
}

model Chapter {
  id          String       @id @default(cuid())
  title       String
  content     String
  videoUrl    String?
  position    Int
  isFree      Boolean      @default(false)
  courseId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isPublished Boolean      @default(false)
  course      Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
  quizzes     Quiz[]
  subchapters Subchapter[]
}

model Lesson {
  id        String   @id @default(cuid())
  title     String
  content   String
  videoUrl  String?
  position  Int
  chapterId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        String        @id @default(cuid())
  title     String
  chapterId String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  questions Question[]
  chapter   Chapter       @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  attempts  QuizAttempt[]
}

model Question {
  id        String   @id @default(cuid())
  text      String
  type      String
  options   Json
  answer    String
  points    Int      @default(1)
  quizId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  quizId    String
  score     Int
  answers   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  chapterId   String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
}

model Subchapter {
  id        String   @id @default(cuid())
  title     String
  content   String
  videoUrl  String?
  position  Int
  chapterId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model ContentSettings {
  id        String   @id @default("main")
  settings  Json     // Store filter categories, featured courses, layout options
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlatformSettings {
  id                      String    @id @default("global")
  enableTwoFactorAuth     Boolean   @default(false)
  disablePublicSignups    Boolean   @default(false)
  lockPlatformInviteOnly  Boolean   @default(false)
  enableAuditLogs         Boolean   @default(true)
  updatedAt               DateTime  @updatedAt
}

model Invitation {
  id        String   @id @default(cuid())
  token     String   @unique @default(cuid())
  email     String
  role      UserRole
  courseId  String?
  message   String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)
  invitedBy String   // ID of the admin who sent the invitation
  invitedByUser User @relation(fields: [invitedBy], references: [id], onDelete: Cascade)
}

model UserProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Personal Information
  bio         String?  @db.Text
  title       String?  // Job title or role
  location    String?
  phone       String?
  
  // Social Links
  linkedin    String?
  github      String?
  twitter     String?
  website     String?
  youtube     String?
  instagram   String?
  
  // Images
  avatar      String?  // Cloudinary URL
  bannerImage String?  // Cloudinary URL
  
  // Additional Settings
  isPublic    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// RANKING SYSTEM MODELS
// ============================================

model UserRank {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Current Status
  currentRank     Int      @default(1) // 1-14
  totalPoints     Int      @default(0)
  weeklyPoints    Int      @default(0)
  lastWeekRank    Int?     // Position in leaderboard
  
  // Streaks & Activity
  streakDays      Int      @default(0)
  lastActive      DateTime @default(now())
  lastStreakDate  DateTime @default(now())
  
  // Historical Data
  highestRank     Int      @default(1)
  promotionCount  Int      @default(0)
  demotionCount   Int      @default(0)
  
  // Achievements
  achievements    String[] // Array of achievement IDs
  
  // Protection & Immunity
  immunityWeeks   Int      @default(2) // New user protection
  frozenUntil     DateTime? // Rank freeze premium feature
  
  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  completions     ChapterCompletion[]
  rankHistory     RankHistory[]
  
  @@index([currentRank])
  @@index([totalPoints(sort: Desc)])
  @@index([weeklyPoints(sort: Desc)])
}

model CoursePoints {
  id                String   @id @default(cuid())
  courseId          String   @unique
  course            Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  // Points Configuration
  totalPoints       Int      // Total points for completing entire course
  pointsPerChapter  Float    // Auto-calculated: totalPoints / chapter count
  difficulty        Difficulty @default(BEGINNER)
  
  // Metadata
  assignedBy        String   // Admin user ID who assigned points
  assignedAt        DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Notes
  adminNotes        String?  @db.Text
  
  @@index([difficulty])
  @@index([totalPoints(sort: Desc)])
}

model ChapterCompletion {
  id              String   @id @default(cuid())
  userId          String
  userRank        UserRank @relation(fields: [userId], references: [userId], onDelete: Cascade)
  chapterId       String
  courseId        String
  
  // Points Breakdown
  basePoints      Int      // Points from course allocation
  bonusPoints     Int      @default(0) // All bonuses combined
  totalPoints     Int      // basePoints + bonusPoints
  
  // Completion Details
  completionTime  Int      // Time taken in seconds
  isFirstTime     Boolean  @default(true)
  isPerfectScore  Boolean  @default(false)
  hasSpeedBonus   Boolean  @default(false)
  
  // Multipliers Applied
  streakMultiplier Float   @default(1.0)
  finalPoints     Int      // totalPoints Ã— multiplier
  
  // Metadata
  completedAt     DateTime @default(now())
  
  @@unique([userId, chapterId])
  @@index([userId, completedAt(sort: Desc)])
  @@index([courseId])
}

model WeeklyLeaderboard {
  id            String   @id @default(cuid())
  weekNumber    Int      // Week number in year (1-52)
  year          Int
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Rankings
  rank          Int      // Position in leaderboard
  weeklyPoints  Int      // Points earned this week
  totalPoints   Int      // Total cumulative points
  currentRank   Int      // User's rank tier (1-14)
  
  // Changes
  rankChange    Int      @default(0) // +/- position change
  zone          LeaderboardZone // PROMOTION/SAFE/DEMOTION
  
  // Metadata
  createdAt     DateTime @default(now())
  
  @@unique([weekNumber, year, userId])
  @@index([weekNumber, year, rank])
  @@index([userId, year, weekNumber(sort: Desc)])
}

model RankHistory {
  id            String   @id @default(cuid())
  userId        String
  userRank      UserRank @relation(fields: [userId], references: [userId], onDelete: Cascade)
  
  // Rank Change
  previousRank  Int
  newRank       Int
  changeType    RankChangeType
  
  // Context
  weekNumber    Int
  year          Int
  reason        String?  @db.Text // Explanation of change
  pointsAtTime  Int      // Total points when change occurred
  
  // Metadata
  createdAt     DateTime @default(now())
  
  @@index([userId, createdAt(sort: Desc)])
  @@index([weekNumber, year])
}

model RankConfiguration {
  id            String   @id @default(cuid())
  rankNumber    Int      @unique // 1-14
  
  // Rank Details
  name          String   // e.g., "Knowledge Seeker"
  icon          String   // Emoji or icon identifier
  color         String   // Hex color code
  description   String   @db.Text
  
  // Requirements
  minPoints     Int
  maxPoints     Int?     // Null for highest rank
  estimatedWeeks Int     // Estimated time to reach
  
  // Display
  tier          String   // NOVICE/INTERMEDIATE/ADVANCED/EXPERT/LEGENDARY
  isAnimated    Boolean  @default(false)
  
  // Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([rankNumber])
}

model Achievement {
  id            String   @id @default(cuid())
  
  // Achievement Details
  code          String   @unique // e.g., "STREAK_MASTER_30"
  name          String
  description   String   @db.Text
  icon          String   // Emoji or icon identifier
  category      AchievementCategory
  
  // Requirements
  requirement   Json     // Flexible JSON for different conditions
  pointsReward  Int      @default(0)
  
  // Rarity
  rarity        AchievementRarity
  
  // Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([category])
  @@index([rarity])
}

model WeeklyEvaluationLog {
  id              String   @id @default(cuid())
  weekNumber      Int
  year            Int
  
  // Evaluation Stats
  usersEvaluated  Int
  promotions      Int
  demotions       Int
  maintained      Int
  
  // Execution Details
  startedAt       DateTime
  completedAt     DateTime
  status          EvaluationStatus
  errorLog        String?  @db.Text
  
  // Metadata
  createdAt       DateTime @default(now())
  
  @@unique([weekNumber, year])
  @@index([status])
}

// ============================================
// ENUMS FOR RANKING SYSTEM
// ============================================

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum LeaderboardZone {
  PROMOTION    // Top 10
  SAFE         // 11-50
  DEMOTION     // 51+
}

enum RankChangeType {
  PROMOTION
  DEMOTION
  MAINTAIN
  MANUAL       // Admin adjustment
}

enum AchievementCategory {
  STREAK
  COMPLETION
  SPEED
  PERFECTION
  MILESTONE
  SPECIAL
}

enum AchievementRarity {
  COMMON
  RARE
  EPIC
  LEGENDARY
}

enum EvaluationStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum UserRole {
  OWNER
  ADMIN
  INSTRUCTOR
  STUDENT
  GUEST
}

enum UserStatus {
  ACTIVE
  BLOCKED
}
