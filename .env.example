# =============================================================================
# PRISMA ACCELERATE + NEON DATABASE CONFIGURATION
# =============================================================================
# 1. Sign up at https://console.prisma.io/ and enable Accelerate
# 2. Connect your Neon database to Accelerate
# 3. Copy the Accelerate connection string (starts with prisma://accelerate.prisma-data.net)
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY_HERE"

# Direct connection for migrations (Neon Database)
# Get from: Neon Dashboard → Connection Details → Connection String
# Use the DIRECT connection (not pooler) for migrations
DIRECT_URL="postgresql://neondb_owner:YOUR_PASSWORD@ep-xxx-xxx.REGION.aws.neon.tech/DATABASE_NAME?sslmode=require"

# =============================================================================
# NEXTAUTH CONFIGURATION (CRITICAL FOR PRODUCTION!)
# =============================================================================
# Generate a secure secret using: openssl rand -base64 32
# IMPORTANT: Use a different secret for production than development!
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# NEXTAUTH_URL - CRITICAL FOR PRODUCTION
# For local development: http://localhost:3000
# For Vercel production: https://your-app.vercel.app
# For Vercel preview: leave empty (Vercel auto-sets VERCEL_URL)
# NOTE: In Vercel, you can leave this empty and it will auto-detect from VERCEL_URL
NEXTAUTH_URL="http://localhost:3000"

# Site URL for SEO, sitemap, and absolute URLs
# For local development: http://localhost:3000
# For production: https://your-app-name.vercel.app
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Vercel automatically provides these (DO NOT SET MANUALLY):
# VERCEL="1"
# VERCEL_ENV="production" | "preview" | "development"
# VERCEL_URL="your-app.vercel.app" (auto-set, use for OAuth callbacks)

# =============================================================================
# OAUTH PROVIDERS (Update redirect URIs for production!)
# =============================================================================
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Add these authorized redirect URIs in Google Console:
#   - http://localhost:3000/api/auth/callback/google (development)
#   - https://your-app.vercel.app/api/auth/callback/google (production)
#   - https://*.vercel.app/api/auth/callback/google (preview deployments)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth - Get from: https://github.com/settings/developers
# IMPORTANT: Add these authorization callback URLs:
#   - http://localhost:3000/api/auth/callback/github (development)
#   - https://your-app.vercel.app/api/auth/callback/github (production)
GITHUB_CLIENT_ID="your-github-client-id-here"
GITHUB_CLIENT_SECRET="your-github-client-secret-here"

# =============================================================================
# EMAIL CONFIGURATION (Resend)
# =============================================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"
# For production, use your verified domain: noreply@yourdomain.com
EMAIL_FROM="onboarding@resend.dev"

# =============================================================================
# CLOUDINARY CONFIGURATION (For image uploads)
# =============================================================================
# Get from: https://console.cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
